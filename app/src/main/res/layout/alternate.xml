<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/listvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/listdate"
        android:layout_alignBottom="@+id/listdate"
        android:layout_marginLeft="80dp"
        android:text="TextView"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listdate"
        android:layout_centerInParent="true"
        android:layout_marginTop="42dp">




            <com.example.karthik.delta2.CircularImageView

                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/listvenue"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/listteam1"
                android:layout_toStartOf="@+id/listteam1"
                android:scaleType="centerCrop"

                />


        <TextView
            android:id="@+id/listteam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/listtime"
            android:layout_toStartOf="@+id/listtime"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/listteam1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#424a54"
            android:text="TextView"
            android:textColorHighlight="#ECEADF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listteam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/listtime"
            android:layout_alignBottom="@+id/listtime"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/listtime"

            android:layout_toRightOf="@+id/listtime"
            android:text="TextView"
            android:textStyle="bold" />


        <com.example.karthik.delta2.CircularImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"

            android:scaleType="centerCrop" />


    </LinearLayout>
</RelativeLayout>